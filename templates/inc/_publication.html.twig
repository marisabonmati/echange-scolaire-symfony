<section class="container-fluid bg-light mb-3">
    <div class="container mx-auto">
        <div class="row">

    {% for publication in list_publication %}

        {% if app.user and app.user == publication.userPost %}
            <div class="col-12 col-lg-5 mb-4 p-3 mx-auto">
                <div class="card h-100 p-3">
                    <h3 class="text-center p-4">{{ publication.title }}</h3>
                    <img src="{{ asset(publication.picture) }}" class=" mx-auto mh-100" alt="Photo scolaire">
                        <div class="card-body">
                            <p class="card-text ">
                            {{ publication.descriptionPost }}
                            </p>
                        </div>
                    <a class="btn btn-form mx-auto" href="{{ path('publication_edit', {id: publication.id}) }}">Modifier la publication</a>
                </div>
            </div>
        {% endif %}
        {% endfor %}
        </div>
    </div>
</section>

<div class="container d-flex justify-content-center">
    {% if app.user %}
        <a class="btn btn-form my-2 mx-auto" href="{{ path('publication') }}">Ajouter une publication</a>
    {% endif %}
</div>