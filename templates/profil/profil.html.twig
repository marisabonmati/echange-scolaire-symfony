{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />

{% endblock %}
{% block title %}Profil{% endblock %}

{% block body %}
    {{ form_start(profilForm) }}
    <main>
        <!-- Navigation Accueil/Annonce Prof-->
        <section class="bg-title">
            <nav class="container " aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent">
                    <li class="breadcrumb-item"><a class="revenir-accueil" href="{{ path('home') }}">Accueil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profil</li>
                </ol>
            </nav>
            <div class="container">
                <h1 class="text-center mb-4">{{ user.firstname }} {{ user.lastName }}</h1>
            </div>
        </section>
        <!--Photo profil-->
        <div class="container">
            <div class="row my-5">
                <div class="col-12 col-lg-6">
                    <img class="img1 mb-4 mx-3 mx-sm-0 "
                         src=""
                         alt="Photo d'un enseignant ou un établissement'">
                    {{ form_widget(profilForm.photoFile) }}{{ form_errors(profilForm.photoFile) }}
                </div>

                <!-- Envoyer un message / Ajouter au contact -->
                <div class="col-12 col-lg-6 text-center mt-3 mt-lg-5">
                    <h4 class="mt-3 mt-md-0 text-center">Description de votre profil</h4>
                    <p>{{ form_widget(profilForm.descriptionProfil) }} {{ form_errors(profilForm.descriptionProfil) }}</p>
                </div>
            </div>
        </div>

        <!-- Géolocalisation / Calendrier d'accueil / Capacités d'accueil /
            Numéro de téléphone / Boutton en "recherche d'échange" -->
        <section class="container-fluid bg-light">
            <div class="container">
                <div class="text-center">
                    <h3>Configuration de votre profil</h3>
                    <div class="row text-left my-4">
                        <div class="col-12 col-md-6">
                            <p><i class="mr-2 iconvsp fas fa-map-marker-alt colorIcon"></i>
                                {{ form_widget(profilForm.city) }}
                                {{ form_errors(profilForm.city) }}
                                {{ form_widget(profilForm.country) }}
                                {{ form_errors(profilForm.country) }}
                            </p>
                            <p><i class="mr-2 iconvsp far fa-calendar-alt colorIcon"></i>Choisissez une date de début :
                                {{ form_widget(profilForm.disponibilityDateStart) }}
                                {{ form_errors(profilForm.disponibilityDateStart) }}
                            </p>
                            <p><i class="mr-2 iconvsp far fa-calendar-alt colorIcon"></i>Choisissez une date de fin :
                                {{ form_widget(profilForm.disponibilityDateEnd) }}
                                {{ form_errors(profilForm.disponibilityDateEnd) }}
                            </p>
                            <p><i class="mr-2 iconvsp fas fa-users colorIcon"></i>Capacite d'accueil
                                : {{ form_widget(profilForm.capacity) }} {{ form_errors(profilForm.capacity) }}
                            </p>
                            <p>
                                <label class="custom-control-label" for="customSwitch1">Recherche d'échange</label>
                                {{ form_widget(profilForm.options) }}{{ form_errors(profilForm.options) }}
                            </p>
                            <p> Langue enseignée :
                                {{ form_widget(profilForm.language) }}
                                {{ form_errors(profilForm.language) }}
                            </p>
                            <p> Niveau de votre classe/établissement :
                                {{ form_widget(profilForm.level) }}
                                {{ form_errors(profilForm.level) }}
                            </p>
                            <p> Ajoutez des mot clés liés à votre profil :
                                {{ form_widget(profilForm.tags) }}
                                {{ form_errors(profilForm.tags) }}
                            </p>
                        </div>
                        <div class="col-12 col-md-6">
                            <h4 class="mt-3 mt-md-0 text-center">Description de votre vie scolaire</h4>
                            <p> {{ form_widget(profilForm.descriptionSecondary) }} {{ form_errors(profilForm.descriptionSecondary) }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Plus de configuration du Profil-->
        <section class="container-fluid bg-light">
            <div class="container">
                <div class="text-center">
                    <h3>Configuration des données personnelles</h3>
                    <div class="row text-left my-4">
                        <div class="col-12 col-md-6">
                            <p> Votre nom :
                                {{ form_widget(profilForm.lastName) }}
                                {{ form_errors(profilForm.lastName) }}
                            </p>
                            <p> Votre prénom :
                                {{ form_widget(profilForm.firstname) }}
                                {{ form_errors(profilForm.firstname) }}
                            </p>
                            <p> Votre e-mail :
                                {{ form_widget(profilForm.email) }}
                                {{ form_errors(profilForm.email) }}
                            </p>
                            <p> Votre mot de passe :
                                {{ form_widget(profilForm.plainPassword) }}
                                {{ form_errors(profilForm.plainPassword) }}
                            </p>


                        </div>
                        <div class="col-12 col-md-6">
                            <p>
                                <i class="mr-2 iconvsp fas fa-phone-alt colorIcon">
                                    {{ form_widget(profilForm.phone) }}
                                    {{ form_errors(profilForm.phone) }}
                                </i>
                            </p>
                            <p> Votre adresse :
                                {{ form_widget(profilForm.adress) }}
                                {{ form_errors(profilForm.adress) }}
                            </p>
                            <p> Votre code postal :
                                {{ form_widget(profilForm.cp) }}
                                {{ form_errors(profilForm.cp) }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Historique du profil desktop -->
        <section class="container">
            <div class="d-none d-md-block mt-5">
                <h3 class="text-center mt-4 pb-4">Historique du profil</h3>
                <div class="row row-cols-1 row-cols-md-2">
                    <div class="col mb-4">
                        <div class="card p-3">
                            <img src="img/college5.jpg" class="card-img-top" alt="collège banlieu de Berlin">
                            <div class="card-body">
                                <h4 class="card-title">Hôte</h4>
                                <p class="card-text">Pour une deuxième année consécutive une classe de 3ème a pu à
                                    nouveau profiter
                                    d'une
                                    immersion dans un collège en banlieue de Berlin.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col mb-4">
                        <div class="card p-3">
                            <img src="img/college6.jpg" class="card-img-top" alt="Collège magnifique">
                            <div class="card-body">
                                <h4 class="card-title">Hôte</h4>
                                <p class="card-text">En Novembre 2018, 20 élèves irlandais ont participé pendant une
                                    semaine dans la classe de nos 3èmes, une classe de langues.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col mb-4">
                        <div class="card p-3">
                            <img src="img/college7.jpg" class="card-img-top" alt="Collège Espagne">
                            <div class="card-body">
                                <h4 class="card-title">Voyage</h4>
                                <p class="card-text">Nos élèves de 3ème ont pu profiter d'un séjour linguistique
                                    exceptionnel pendant 2
                                    semaines dans une école en Espagne.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col mb-4">
                        <div class="card p-3">
                            <img src="img/college8.jpg" class="card-img-top" alt="Collège incroyable">
                            <div class="card-body">
                                <h4 class="card-title">Voyage</h4>
                                <p class="card-text">Nous avons passé en Février 2018 un séjour en Équateur dans un
                                    lycée pro pour
                                    une période de deux semaines formidable.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-md-block">
                <div class="d-flex justify-content-center">
                    <button data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo"
                            class="btn vert btn-form"
                            type="button" aria-expanded="false">
                        Voir plus
                    </button>
                </div>
            </div>
        </section>

        <!-- Historique du profil mobile -->

        <div class="d-lg-none mb-4 container">
            <h3 class="text-center mt-4 pb-4">Historique du profil</h3>
            <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="img/college5.jpg" class="d-block w-100" alt="tableau">
                        <div class="carousel-caption bcg-profile d-md-block">
                            <p>Hôte: Nous avons reçu en Février 2018 une classe de 3ème du collège Jean Mermoz pour
                                une période de deux semaines.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="img/college6.jpg" class="d-block w-100" alt="tableau">
                        <div class="carousel-caption bcg-profile d-md-block">
                            <p>Hôte: En Novembre 2018, 15 élèves du collège Jean Mermoz ont eu le plaisir de passer une
                                semaine dans la classe de nos 3ème, une classe de langues.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="img/college7.jpg" class="d-block w-100" alt="tableau">
                        <div class="carousel-caption bcg-profile d-md-block">
                            <p>Voyage: Nos élèves de 3ème ont pu profiter d'un séjour linguistique exceptionnel pendant
                                2
                                semaines dans une école en Espagne.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="img/college8.jpg" class="d-block w-100" alt="tableau">
                        <div class="carousel-caption bcg-profile d-md-block">
                            <p>Voyage: Pour une deuxième année consécutive une classe de 3ème a pu de nouveau profiter
                                d'une
                                immersion dans un collège en banlieu de Berlin pendant 2 semaines.</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>

        <!-- Avis / Tapez votre commentaire desktop -->

        <div class="container-fluid bg-light pb-2">
            <div class="container mt-5">
                <h3 class="text-center mt-3 mt-md-0">Avis</h3>
                <div class="row d-flex justify-content-around">
                    <p class="text-center border col-md-5 col-sm-12"><strong>Sergio Marquina</strong>
                        <img src="img/5-etoiles.png" alt="5 étoiles" class="img"><br> L'échange scolaire avec
                        le professeur Henri Boudreault s'est super bien passé! Ses techniques sont innovatrices et il
                        est très accueillant.</p>
                    <p class="text-center border col-md-5 col-sm-12"><strong>Gaston Clauet</strong><img
                                src="img/5-etoiles.png"
                                alt="5 étoiles" class="img"><br> La rencontre avec le
                        professeur Henri Boudreault nous a permis de constater son excellence et à quel point il est
                        impliqué
                        émotionnellement dans la réussite de ses élèves.
                    </p>
                </div>
                <div class="collapse" id="avis">
                    <div>
                        <div class="row d-flex justify-content-around">
                            <p class="text-center border col-md-5 col-sm-12"><strong>Sabryna Mongeon</strong><img
                                        src="img/5-etoiles.png" alt="5 étoiles" class="img"><br> Henri propose une
                                façon d’apprendre inédite avec dynamisme, pédagogie, et une grande envie de partager.
                            </p>
                            <p class="text-center border col-md-5 col-sm-12"><strong>Hugo Clément</strong><img
                                        src="img/5-etoiles.png"
                                        alt="5 étoiles" class="img"><br> Expérience
                                incroyable. Henri Boudreault était super durant tout notre séjour, il propose des
                                activités ludiques pour apprendre une langue étrangère.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-form" type="button" data-toggle="collapse" data-target="#avis"
                            aria-expanded="false"
                            aria-controls="avis">
                        Voir plus
                    </button>
                </div>
            </div>
        </div>
    </main>
    {{ form_end(profilForm) }}
{% endblock %}

{% block javascripts %}
{{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

<script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
    <script src="{{ asset('assets/js/script.js') }}"></script>
{% endblock %}